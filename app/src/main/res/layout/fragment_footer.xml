<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    tools:context=".fragments.main.FooterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:background="@drawable/footer"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="@dimen/footer_image_size"
            android:layout_height="@dimen/footer_image_size"
            android:layout_weight="1"
            android:src="@drawable/home_gray" />

        <ImageView
            android:id="@+id/search_btn"
            android:layout_width="@dimen/footer_image_size"
            android:layout_height="@dimen/footer_image_size"
            android:layout_weight="1"
            android:src="@drawable/search_gray" />

        <ImageView
            android:id="@+id/music_btn"
            android:layout_width="@dimen/footer_image_size"
            android:layout_height="@dimen/footer_image_size"
            android:layout_weight="1"
            android:src="@drawable/music_gray" />

        <ImageView
            android:id="@+id/profile_btn"
            android:layout_width="@dimen/footer_image_size"
            android:layout_height="@dimen/footer_image_size"
            android:layout_weight="1"
            android:src="@drawable/profile_gray" />
    </LinearLayout>
</FrameLayout>